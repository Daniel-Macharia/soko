<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bag1"
    >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/cream"
        android:orientation="vertical"
        android:padding="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/dark_green"
            android:text="Create Account"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Username: "
                android:gravity="end|center"
                android:paddingEnd="4dp"

                />

            <EditText
                android:id="@+id/signup_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textPersonName"
                android:hint="enter username"
                android:textColorHint="@color/grey"
                android:textColor="@color/blue"
                android:gravity="start|center"
                android:paddingStart="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Location: "
                android:gravity="end|center"
                android:paddingEnd="4dp"

                />

            <EditText
                android:id="@+id/signup_user_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textPersonName"
                android:hint="enter location"
                android:textColorHint="@color/grey"
                android:textColor="@color/blue"
                android:gravity="start|center"
                android:paddingStart="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Phone: "
                android:gravity="end|center"
                android:paddingEnd="4dp"

                />

            <EditText
                android:id="@+id/signup_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="phone"
                android:hint="phone number"
                android:textColorHint="@color/grey"
                android:textColor="@color/blue"
                android:gravity="start|center"
                android:paddingStart="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Email: "
                android:gravity="end|center"
                android:paddingEnd="4dp"
                />

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textEmailAddress"
                android:hint="email address"
                android:textColorHint="@color/grey"
                android:textColor="@color/blue"
                android:gravity="start|center"
                android:paddingStart="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Password: "
                android:gravity="end|center"
                android:paddingEnd="4dp"
                />

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textPassword"
                android:hint="password"
                android:textColorHint="@color/grey"
                android:textColor="@color/blue"
                android:gravity="start|center"
                android:paddingStart="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Confirm: "
                android:gravity="end|center"
                android:paddingEnd="4dp"
                />

            <EditText
                android:id="@+id/signup_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textPassword"
                android:hint="confirm password"
                android:textColorHint="@color/grey"
                android:textColor="@color/blue"
                android:gravity="start|center"
                android:paddingStart="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="sign up as: "
                android:layout_marginTop="8dp"
                android:gravity="end|top"
                />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="start|center"

                >

                <RadioButton
                    android:id="@+id/buyer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="buyer"
                    android:textColor="@color/blue"
                    />

                <RadioButton
                    android:id="@+id/seller"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="seller"
                    android:textColor="@color/blue"
                    />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/shop_name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Shop name: "
                android:gravity="end|center"
                android:paddingEnd="4dp"
                />

            <EditText
                android:id="@+id/shop_name_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textSize="16sp"
                android:hint="enter shop name"
                android:textColorHint="@color/grey"
                android:textColor="@color/blue"
                android:gravity="start|center"
                android:paddingStart="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="end|center"
            >

            <Button
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sign up"
                android:textColor="@color/blue"
                android:backgroundTint="@color/dark_green"
                android:gravity="center"

                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>